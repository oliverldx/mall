<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.portal.dao.PortalCourseDao">

    <resultMap id="ChooseCourseMap" type="com.macro.mall.portal.domain.ChooseCourse" extends="com.macro.mall.mapper.TrsCourseMapper.BaseResultMap" >
        <result column="school_name" jdbcType="VARCHAR" property="schoolName" />
        <result column="book_num" jdbcType="VARCHAR" property="bookNum" />
        <result column="addresses" jdbcType="VARCHAR" property="addresses" />
    </resultMap>

    <select id="getChooseCourses" resultMap="ChooseCourseMap">
        SELECT trs_course.id,trs_course.pic,trs_course.name,trs_course.price,trs_school.name as school_name,'0' as book_num, trs_school.sub_school as addresses
	 FROM trs_course as trs_course
	 LEFT JOIN trs_school as trs_school ON trs_course.trs_school_id = trs_school.id
    </select>



</mapper>